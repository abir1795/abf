{% extends "base.html.twig" %}
{% block body %}

<div class="col-lg-8">
    <h2 style="margin-top: 120px">Order History</h2>
    <a href="{{ path('app_OrderHistory') }}" class="fa fa-arrow-circle-left" style="font-size: 50px;color:#ffbc00" /></a>

    <table class="table table-striped col-lg-8" >
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Produit</th>
            <th scope="col">Prix</th>
            <th scope="col">Qty</th>
            <th scope="col">Total Line</th>
        </tr>
        </thead>
        <tbody id="myTable">

            {% for item in items %}
            <tr>
            <th scope="row">{{ item.id }}</th>
            <td>{{ item.ProductName}}</td>
            <td>{{ item.ProductPrice }}</td>
            <td>{{ item.Qty }}</td>
                <td>{{ item.TotalLine }}</td>


            </tr>
               {% endfor %}

        </tbody>
    </table>
</div>


    <script src="{{ asset('js/app.js') }}"></script>
    
    {#search#}
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>


{% endblock %}