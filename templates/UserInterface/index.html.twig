{% extends "base.html.twig" %}
{% block body %}
    <div class="products-catagories-area clearfix">
        <div class="amado-pro-catagory clearfix" style="position: relative; height: 1098.44px;">

            {% for item in items %}
            <div class="single-products-catagory clearfix" style="position: absolute; left: 0%; top: 0px;">
                <a href="{{ path('Shop_ShowProduitAll',{'id':item.id}) }}">
                    <img src="{{ asset('uploads/Image/' ~ item.ImageUrl) }}"  alt="">

                    <div class="hover-content">
                        <div class="line"></div>

                        <h4>{{ item.NameCategorie }}</h4>
                    </div>
                </a>
            </div>
            {% endfor %}





        </div>
    </div>
{% endblock %}